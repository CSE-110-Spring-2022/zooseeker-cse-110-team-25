<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="117dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="118dp"
        android:text="Settings"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/details_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:paddingStart="36dp"
        android:paddingEnd="36dp"
        android:text="Direction Details:"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/setting_title"
        tools:layout_editor_absoluteX="44dp" />

    <TextView
        android:id="@+id/directions_brief"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:onClick="onBriefClicked"
        android:paddingStart="48dp"
        android:paddingTop="5dp"
        android:paddingEnd="48dp"
        android:paddingBottom="5dp"
        android:text="Brief"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/details_label"
        tools:layout_editor_absoluteX="89dp" />

    <TextView
        android:id="@+id/directions_detailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:onClick="onDetailedClicked"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:text="Detailed"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/directions_brief"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="180dp"
        android:layout_marginEnd="181dp"
        android:layout_marginBottom="83dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="x"
        android:textSize="24sp"
        android:onClick="onExitClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>